---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Kontakt - n3tz Professionelles Web-Entwicklungsstudio',
  description:
    'Kontaktieren Sie n3tz für professionelle Web-Entwicklungsdienstleistungen, Projektberatung und maßgeschneiderte digitale Lösungen.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Kontakt" title="Bereit, Ihr Projekt zu starten?" />

  <ContactUs
    subtitle="Bereit, Ihre digitale Präsenz zu transformieren? Kontaktieren Sie unser professionelles Web-Entwicklungsteam, um Ihre Projektanforderungen zu besprechen und zu erkunden, wie wir Ihnen helfen können, Ihre Geschäftsziele zu erreichen."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name*',
        required: true,
        placeholder: 'John Doe',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Firma',
        placeholder: 'n3tz',
      },
      {
        type: 'email',
        name: 'email',
        label: 'E-Mail*',
        required: true,
        placeholder: 'john@n3tz.io',
      },
    ]}
    textarea={{
      label: 'Nachricht*',
      placeholder: 'Geben Sie hier Ihre Nachricht ein...',
      required: true,
    }}
    disclaimer={{
      required: true,
      label:
        'Mit dem Absenden dieses Kontaktformulars stimmen Sie der Speicherung Ihrer persönlichen Informationen zu.',
    }}
    description="Sie erhalten innerhalb von 24 Stunden eine Antwort."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Wie wir Ihnen helfen können"
    items={[
      {
        title: 'Projektberatung',
        description:
          'Vereinbaren Sie eine Beratung, um Ihre Web-Entwicklungsbedürfnisse, den Projektumfang und die Art und Weise zu besprechen, wie unser professionelles Team die perfekte Lösung für Ihr Unternehmen liefern kann.',
      },
      {
        title: 'Maßgeschneiderte Entwicklungsdienstleistungen',
        description:
          'Von eleganten Websites bis hin zu komplexen Webanwendungen bieten wir maßgeschneiderte Entwicklungsdienstleistungen, die mit Ihren Geschäftsanforderungen skalieren und das Wachstum fördern.',
      },
      {
        title: 'Technischer Support',
        description:
          'Erhalten Sie fachkundige Unterstützung bei Web-Entwicklungsherausforderungen, Leistungsoptimierung oder technische Beratung für Ihre bestehenden digitalen Lösungen.',
      },
    ]}
  />
</Layout>
