---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto - n3tz Estudio de Desarrollo Web Profesional',
  description:
    'Contacta con n3tz para servicios profesionales de desarrollo web, consultas de proyectos y soluciones digitales personalizadas.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="¿Listo para comenzar tu proyecto?" />

  <ContactUs
    subtitle="¿Listo para transformar tu presencia digital? Contacta con nuestro equipo profesional de desarrollo web para discutir los requisitos de tu proyecto y explorar cómo podemos ayudarte a alcanzar tus objetivos comerciales."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre*',
        required: true,
        placeholder: 'John Doe',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Empresa',
        placeholder: 'n3tz',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo electrónico*',
        required: true,
        placeholder: 'john@n3tz.io',
      },
    ]}
    textarea={{
      label: 'Mensaje*',
      placeholder: 'Escribe tu mensaje aquí...',
      required: true,
    }}
    disclaimer={{
      required: true,
      label: 'Al enviar este formulario de contacto, reconoces y aceptas la recopilación de tu información personal.',
    }}
    description="Recibirás una respuesta en 24 horas."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Cómo podemos ayudarte"
    items={[
      {
        title: 'Consulta de proyecto',
        description:
          'Programa una consulta para discutir tus necesidades de desarrollo web, el alcance del proyecto y cómo nuestro equipo profesional puede entregar la solución perfecta para tu negocio.',
      },
      {
        title: 'Servicios de desarrollo personalizados',
        description:
          'Desde sitios web elegantes hasta aplicaciones web complejas, proporcionamos servicios de desarrollo a medida que escalan con tus requisitos comerciales y impulsan el crecimiento.',
      },
      {
        title: 'Soporte técnico',
        description:
          'Obtén asistencia experta con desafíos de desarrollo web, optimización de rendimiento o orientación técnica para tus soluciones digitales existentes.',
      },
    ]}
  />
</Layout>
