---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact - n3tz Professional Web Development Studio',
  description:
    'Contact n3tz for professional web development services, project consultations, and custom digital solutions.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Ready to Start Your Project?" />

  <ContactUs
    subtitle="Ready to transform your digital presence? Contact our professional web development team to discuss your project requirements and explore how we can help achieve your business goals."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name*',
        required: true,
        placeholder: 'John Doe',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
        placeholder: 'n3tz',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email*',
        required: true,
        placeholder: 'john@n3tz.io',
      },
    ]}
    textarea={{
      label: 'Message*',
      placeholder: 'Type your message here...',
      required: true,
    }}
    disclaimer={{
      required: true,
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="You will receive a response within 24 hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="How We Can Help"
    items={[
      {
        title: 'Project Consultation',
        description:
          'Schedule a consultation to discuss your web development needs, project scope, and how our professional team can deliver the perfect solution for your business.',
      },
      {
        title: 'Custom Development Services',
        description:
          'From elegant websites to complex web applications, we provide tailored development services that scale with your business requirements and drive growth.',
      },
      {
        title: 'Technical Support',
        description:
          'Get expert assistance with web development challenges, performance optimization, or technical guidance for your existing digital solutions.',
      },
    ]}
  />
</Layout>
