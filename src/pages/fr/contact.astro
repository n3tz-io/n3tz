---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact - n3tz Studio de Développement Web Professionnel',
  description:
    'Contactez n3tz pour des services de développement web professionnels, des consultations de projet et des solutions numériques personnalisées.',
};
---

<Layout metadata={metadata}>
  <HeroText tagline="Contact" title="Prêt à démarrer votre projet ?" />

  <ContactUs
    subtitle="Prêt à transformer votre présence numérique ? Contactez notre équipe professionnelle de développement web pour discuter de vos exigences de projet et explorer comment nous pouvons vous aider à atteindre vos objectifs commerciaux."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nom*',
        required: true,
        placeholder: 'John Doe',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Société',
        placeholder: 'n3tz',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email*',
        required: true,
        placeholder: 'john@n3tz.io',
      },
    ]}
    textarea={{
      label: 'Message*',
      placeholder: 'Tapez votre message ici...',
      required: true,
    }}
    disclaimer={{
      required: true,
      label:
        'En soumettant ce formulaire de contact, vous reconnaissez et acceptez la collecte de vos informations personnelles.',
    }}
    description="Vous recevrez une réponse dans les 24 heures."
  />

  <Features2
    title="Comment nous pouvons vous aider"
    items={[
      {
        title: 'Consultation de projet',
        description:
          'Planifiez une consultation pour discuter de vos besoins en développement web, de la portée du projet et de la façon dont notre équipe professionnelle peut livrer la solution parfaite pour votre entreprise.',
      },
      {
        title: 'Services de développement personnalisés',
        description:
          "Des sites web élégants aux applications web complexes, nous fournissons des services de développement sur mesure qui s'adaptent à vos exigences commerciales et favorisent la croissance.",
      },
      {
        title: 'Support technique',
        description:
          "Obtenez une assistance experte pour les défis de développement web, l'optimisation des performances ou des conseils techniques pour vos solutions numériques existantes.",
      },
    ]}
  />
</Layout>
