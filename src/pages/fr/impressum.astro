---

<Layout {...metadata}>
  <div class="flex justify-center items-center">
    <Content title="Mentions légales">
      <Fragment slot="content">
        <div class="flex flex-col gap-6 text-base">
          
          <!-- Informations conformément au § 5 DDG -->
          <section>
            <h2 class="text-xl font-semibold mb-3">Informations conformément au § 5 DDG (Loi allemande sur les services numériques)</h2>
            <address class="not-italic">
              <p class="font-semibold">n3tz</p>
              <p>Tarik Ermis</p>
              <p>Kaiserstr. 27</p>
              <p>66333 Völklingen</p>
              <p>Allemagne</p>
            </address>
          </section>

          <!-- Contact -->
          <section>
            <h2 class="text-xl font-semibold mb-3">Contact</h2>
            <p>Téléphone : <a href="tel:+4915737532227" class="text-primary hover:underline">+49 157 37532227</a></p>
            <p>E-mail : <a href="mailto:mail@n3tz.io" class="text-primary hover:underline">mail@n3tz.io</a></p>
